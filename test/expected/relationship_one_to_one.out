begin;
    create table account(
        id int primary key
    );
    create table address(
        id int primary key,
        -- unique constraint makes this a 1:1 relationship
        account_id int not null unique references account(id)
    );
    select jsonb_pretty(
        graphql.resolve($$
        {
          __type(name: "Account") {
            kind
            fields {
              name
              type {
                name
              }
            }
          }
        }
        $$)
    );
